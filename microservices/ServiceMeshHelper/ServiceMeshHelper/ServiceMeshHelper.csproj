<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>1.2.0</Version>
	<PackageOutputPath>..\..\Nuget\</PackageOutputPath>
	<GenerateDocumentationFile>true</GenerateDocumentationFile>
	<DocumentationFile>$(MSBuildProjectName).xml</DocumentationFile>
  </PropertyGroup>

	<ItemGroup>
		<None Include="$(MSBuildProjectName).xml" Pack="true" PackagePath="..\..\Nuget\" />
	</ItemGroup>

	<ItemGroup>
    <Compile Remove="DomainInterfaces\**" />
    <EmbeddedResource Remove="DomainInterfaces\**" />
    <None Remove="DomainInterfaces\**" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Nuget.xml" />
	  <None Remove="ServiceMeshHelper.xml" />
	</ItemGroup>

	<ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.1" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="7.0.1" />
    <PackageReference Include="RestSharp" Version="110.2.0" /> 
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Extensions\" />
  </ItemGroup>

</Project>
